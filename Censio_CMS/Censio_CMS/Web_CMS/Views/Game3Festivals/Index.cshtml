
@{ var hrefURL = Censio_CMS.Startup.GethrefURL();}
@model IEnumerable<Domain.Entities.TblGame3Festivals>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="block full">
    <div class="block-title">
        <h2><strong> @ViewBag.PageName</strong> </h2>
    </div>
    <div class="table-responsive">

        <button type="button" onclick="location.href='@Url.Action("Create", "Game3Festivals")'" class="btn btn-sm btn-primary"><i class="fa fa-plus"></i>Add</button>
        <table id="example-datatable" class="table table-vcenter table-condensed table-bordered">
            <thead>
                <tr>
                    <th class="text-center">Sr No.</th>
                    <th class="text-center">Festival Id</th>
                    <th class="text-center">GameName</th>
                    <th class="text-center">Festival Sequence</th>
                    <th class="text-center">Festival Name</th>
                    <th class="text-center">Festival ImagePath</th>
                    <th class="text-center">Raw Material</th>
                    <th class="text-center">Raw Material Exact Qty</th>
                    <th class="text-center">Raw Material Min Qty Past</th>
                    <th class="text-center">Raw Material Min Qty Future</th>
                    <th class="text-center">Score Absolute/Calculated</th>
                    <th class="text-center">Primary Material Score</th>
                    <th class="text-center">Secondary Material Score Positive</th>
                    <th class="text-center">Secondary Material Score Negative</th>
                    <th class="text-center">Raw Material Imagepath</th>
                    <th class="text-center">Message Max Qty Success</th>
                    <th class="text-center">Message Max Qty Fail</th>
                    <th class="text-center">Message Min Qty Success</th>
                    <th class="text-center">Message Min Qty Fail</th>
                    <th class="text-center">Message Festival Success</th>
                    <th class="text-center">Message Festival Fail</th>
                    <th class="text-center">Time Required Seconds</th>
                    <th class="text-center">Status</th>
                    <th class="text-center">Created By</th>
                    <th class="text-center">Updated By</th>
                    <th class="text-center">Updated Date Time</th>
                    <th class="text-center">Actions</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.IdFestivalLog)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.IdFestival)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.GameName)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.FestivalSequence)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.FestivalName)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.FestivalImagepath)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.RawMaterial)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.RawMaterialExactqty)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.RawMaterialMinQtyPast)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.RawMaterialMinQtyFuture)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.ScoreAbsoluteCalculated)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.PrimaryMaterialScore)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.SecondaryMaterialScorePositive)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.SecondaryMaterialScoreNegative)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.RawMaterialImagepath)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.MessageMaxQtySuccess)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.MessageMaxQtyFail)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.MessageMinQtySuccess)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.MessageMinQtyFail)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.MessageFestivalFail)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.MessageFestivalSuccess)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.TimeRequiredSeconds)</td>
                    @if (item.Status == "A")
                    {
                        <td class="text-center">Active</td>
                    }
                    else
                    {
                        <td class="text-center"> DeActive</td>
                    }
                    <td class="text-center">@Html.DisplayFor(modelItem => item.CreatedBy)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.UpdatedBy)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.UpdatedDateTime)</td>

                    <td class="text-center">
                        <div class="btn-group">
                            @Html.ActionLink("Edit", "Edit", new { id = item.IdFestivalLog }, new { @title = "Edit", @class = "glyphicon glyphicon-pencil" })
                            @*<a href="javascript:void(0)" onclick="GetAddEdit(@item.Id_Industry);" data-toggle="tooltip" title="Edit" class="btn btn-effect-ripple btn-xs btn-success"><i class="material-icons">create</i></a>*@
                            @if (item.Status == "A")
                            {
                                @Html.ActionLink("DeActivate", "DeActivate", new { id = item.IdFestivalLog }, new { @title = "DeActivate", @class = "glyphicon glyphicon-pencil" })
                            }
                            else
                            {
                                @Html.ActionLink("Activate", "Activate", new { id = item.IdFestivalLog }, new { @title = "DeActivate", @class = "glyphicon glyphicon-pencil" })
                            }

                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script src="~/AppJavascript/Game3Festivals.js"></script>