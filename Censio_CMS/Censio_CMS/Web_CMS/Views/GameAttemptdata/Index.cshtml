
@{ var hrefURL = Censio_CMS.Startup.GethrefURL();}
@model IEnumerable<Censio_CMS.Models.GameAttemptdataModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="block full">
    <div class="block-title">
        <h2><strong> @ViewBag.PageName</strong> </h2>
    </div>
    <div class="table-responsive">

        <button type="button" onclick="location.href='@Url.Action("Create", "GameAttemptdata")'" class="btn btn-sm btn-primary"><i class="fa fa-plus"></i>Add</button>
        <table id="example-datatable" class="table table-vcenter table-condensed table-bordered">
            <thead>
                <tr>
                    <th class="text-center">Id</th>
                    <th class="text-center">GameName</th>
                    <th class="text-center">ChallengeName</th>
                    <th class="text-center">AttemptNo</th>
                    <th class="text-center">GoldCoins</th>
                    <th class="text-center">BehaviorElement</th>
                    <th class="text-center">BehaviorScore</th>
                    <th class="text-center">TimeInSecond</th>
                    <th class="text-center">ChallengeCompletedTime1</th>
                    <th class="text-center">RewardCoinsTime1</th>
                    <th class="text-center">ChallengeCompletedTime2</th>
                    <th class="text-center">RewardCoinsTime2</th>
                    <th class="text-center">FailAttemptMessage</th>
                    <th class="text-center">SuccessAttemptMessage</th>
                    <th class="text-center">Status</th>
                    <th class="text-center">Date and Time</th>
                    <th class="text-center">Actions</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>

                    <td class="text-center">@Html.DisplayFor(modelItem => item.IdAttempt)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.GameName)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.ChallengeName)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.AttemptNo)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.GoldCoins)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.BehaviorElement)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.BehaviorScore)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.TimeInSecond)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.ChallengeCompletedTime1)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.RewardCoinsTime1)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.ChallengeCompletedTime2)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.RewardCoinsTime2)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.FailAttemptMessage)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.SuccessAttemptMessage)</td>

                    @if (item.IsActive == "A")
                    {
                        <td class="text-center">Active</td>
                    }
                    else
                    {
                        <td class="text-center"> DeActive</td>
                    }

                    <td class="text-center">@Html.DisplayFor(modelItem => item.UpdatedDateTime)</td>
                    <td class="text-center">
                        <div class="btn-group">
                            @Html.ActionLink("Edit", "Edit", new { id = item.IdAttempt }, new { @title = "Edit", @class = "glyphicon glyphicon-pencil" })
                            @*<a href="javascript:void(0)" onclick="GetAddEdit(@item.Id_Industry);" data-toggle="tooltip" title="Edit" class="btn btn-effect-ripple btn-xs btn-success"><i class="material-icons">create</i></a>*@

                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script src="~/AppJavascript/GameAttemptdata.js"></script>