@model Censio_CMS.Models.GuideDialoguesModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="block full">
    <div class="block-title">
        <button type="button" onclick="location.href='@Url.Action("Index", "GuideDialogues")'" class="btn btn-primary" style="float: right; margin: 0; margin-right: 10px; margin-top: 9px; padding: 1px 13px;" data-dismiss="modal" aria-hidden="true">Back</button>
        <h2><strong>@ViewBag.modelTitle Guide Dialogues</strong> </h2>
    </div>
    <div class="table-responsive">

        <form id="form" class="push">

            <div class="modal-body">
                <div id="myAlert">
                </div>
                <div class="loader "> <img src="~/img/Loader.gif" style="height:50px;width:50px" /></div>
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">

                        <div class="form-group">
                            <label for="Industry_Name">Game Name</label>
                            @Html.TextBoxFor(m => m.IdGuideDialogues, new { @id = "IdGuideDialogues", @style = "display: none;" })
                            @Html.DropDownListFor(m => m.IdGame, new SelectList(Model.GameNameList, "Value", "Text"), "", new { @id = "IdGame", @class = "form-control" })

                        </div>

                        <div class="form-group">
                            <label for="password">Guide Dialogue</label>
                            @Html.TextBoxFor(m => m.GuideDialogue, new { @id = "GuideDialogue", @class = "form-control" })

                        </div>

                       


                        <div class="form-group">
                            <label for="password">Guide IntroMessage</label>
                            @Html.TextAreaFor(m => m.GuideIntroMessage, new { @id = "GuideIntroMessage", @class = "form-control" })

                        </div>

                        <div class="form-group">
                            <label for="password">TypeDialogue</label>
                            @Html.TextBoxFor(m => m.TypeDialogue, new { @id = "TypeDialogue", @class = "form-control" })

                        </div>

                        <div class="form-group">
                            <label for="password">TypeDialogueName</label>
                            @Html.TextBoxFor(m => m.TypeDialogueName, new { @id = "TypeDialogueName", @class = "form-control" })

                        </div>

                        <div class="form-group">
                            <label for="password">Sequence</label>
                            @Html.TextBoxFor(m => m.Sequence, new { @id = "Sequence", @class = "form-control" })

                        </div>


                        <div class="form-group">
                            <label for="checkout-payment-name">Status</label>
                            @Html.DropDownListFor(m => m.IsActive, new List<SelectListItem>
                                   {
                                   new SelectListItem{ Text="Active", Value = "A" },
                                   new SelectListItem{ Text="Deactive", Value = "D" }}, new { @class = "form-control", @style = "width:100%;", @id = "IsActive" })
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btn" class="btn btn-effect-ripple btn-sm btn-success">Save</button>
                <button type="button" onclick="Close();" class="btn btn-effect-ripple btn-sm btn-danger">Cancel</button>
            </div>
        </form>
    </div>
</div>
<script src="~/js/Jquery3.5.1.js"></script>

