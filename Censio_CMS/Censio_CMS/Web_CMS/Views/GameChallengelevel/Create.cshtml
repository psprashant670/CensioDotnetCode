            //},
            //messages: {


            //    Url: "Please Uploade Image ",
            //    IsActive: "Please Select a Status",
            //}
        })
    });



</script>
<style type="text/css">
    .loader {
        display: none;
        position: absolute;
        top: 75%;
        left: 50%;
        margin: -75px 0px 0px -50px;
    }
</style>
<script src="~/AppJavascript/GameChallengelevel.js"></script>