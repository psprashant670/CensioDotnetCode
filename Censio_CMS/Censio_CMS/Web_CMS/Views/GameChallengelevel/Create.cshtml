@model Censio_CMS.Models.GameChallengelevelModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="block full">
    <div class="block-title">
        <button type="button" onclick="location.href='@Url.Action("Index", "GameChallengelevel")'" class="btn btn-primary" style="float: right; margin: 0; margin-right: 10px; margin-top: 9px; padding: 1px 13px;" data-dismiss="modal" aria-hidden="true">Back</button>
        <h2><strong>@ViewBag.modelTitle Game Challengelevel</strong> </h2>
    </div>
    <div class="table-responsive">

        <form id="form" class="push">

            <div class="modal-body">
                <div id="myAlert">
                </div>
                <div class="loader "> <img src="~/img/Loader.gif" style="height:50px;width:50px" /></div>
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">

                        <div class="form-group">
                            <label for="Industry_Name">Game Name</label>
                            @Html.TextBoxFor(m => m.IdLevel, new { @id = "IdLevel", @style = "display: none;" })
                            @Html.DropDownListFor(m => m.IdGame, new SelectList(Model.GameNameList, "Value", "Text"), "", new { @id = "IdGame", @class = "form-control", @onchange = "Gamechange();" })

                        </div>

                        <div class="form-group">
                            <label for="password">ChallengeName</label>
                            @Html.TextBoxFor(m => m.ChallengeName, new { @id = "ChallengeName", @class = "form-control" })

                        </div>

                        <div class="form-group">
                            <div class="col-sm-6">
                                <label for="checkout-payment-name">ChallengeSmallImgUrl</label>
                                @Html.TextBoxFor(m => m.ChallengeSmallImgUrl, new { @id = "ChallengeSmallImgUrl", @style = "display: none;" })
                                <input type="file" title="Upload File" class="form-control" id="ChallengeSmallImgUrlfile" name="file" onchange="ChallengeSmallImgUrlshow(this)" />
                            </div>

                            <div class="col-sm-6">
                                <img id="ChallengeSmallImgUrl_img" style="height:100px;width:100px;" class="form-control" Style="border:solid" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-6">
                                <label for="checkout-payment-name">ChallengeBigImgUrl</label>
                                @Html.TextBoxFor(m => m.ChallengeBigImgUrl, new { @id = "ChallengeBigImgUrl", @style = "display: none;" })
                                <input type="file" title="Upload File" class="form-control" id="ChallengeBigImgUrlfile" name="file" onchange="ChallengeBigImgUrlshow(this)" />
                            </div>

                            <div class="col-sm-6">
                                <img id="ChallengeBigImgUrl_img" style="height:100px;width:100px;" class="form-control" Style="border:solid" />
                            </div>
                        </div>


                        <div class="form-group">
                            <label for="password">BigImgText</label>
                            @Html.TextAreaFor(m => m.BigImgText, new { @id = "BigImgText", @class = "form-control" })

                        </div>

                        <div class="form-group">
                            <label for="password">ChallengeIntroMessage</label>
                            @Html.TextAreaFor(m => m.ChallengeIntroMessage, new { @id = "ChallengeIntroMessage", @class = "form-control" })

                        </div>

                        <div class="form-group">
                            <label for="password">BottomCompleteMessage</label>
                            @Html.TextAreaFor(m => m.BottomCompleteMessage, new { @id = "BottomCompleteMessage", @class = "form-control" })

                        </div>

                        <div class="form-group">
                            <label for="password">BottomFailMessage</label>
                            @Html.TextAreaFor(m => m.BottomFailMessage, new { @id = "BottomFailMessage", @class = "form-control" })

                        </div>


                        <div class="form-group">
                            <div class="col-sm-6">
                                <label for="checkout-payment-name">ChallengePieceMapImgUrl</label>
                                @Html.TextBoxFor(m => m.ChallengePieceMapImgUrl, new { @id = "ChallengePieceMapImgUrl", @style = "display: none;" })
                                <input type="file" title="Upload File" class="form-control" id="ChallengePieceMapImgUrlfile" name="file" onchange="ChallengePieceMapImgUrlshow(this)" />
                            </div>

                            <div class="col-sm-6">
                                <img id="ChallengePieceMapImgUrl_img" style="height:100px;width:100px;" class="form-control" Style="border:solid" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password">ChallengePieceMapMsg</label>
                            @Html.TextAreaFor(m => m.ChallengePieceMapMsg, new { @id = "ChallengePieceMapMsg", @class = "form-control" })

                        </div>
                        <div class="form-group">
                            <label for="password">NotBackingOutMsg</label>
                            @Html.TextAreaFor(m => m.NotBackingOutMsg, new { @id = "NotBackingOutMsg", @class = "form-control" })

                        </div>
                        <div class="form-group">
                            <label for="password">AgainPlayCoins</label>
                            @Html.TextBoxFor(m => m.AgainPlayCoins, new { @id = "AgainPlayCoins", @class = "form-control" })

                        </div>

                        <div class="form-group">
                            <label for="password">AttemptsAllowed</label>
                            @Html.TextBoxFor(m => m.AttemptsAllowed, new { @id = "AttemptsAllowed", @class = "form-control" })

                        </div>


                        <div class="form-group">
                            <label for="password">AttemptTimer</label>
                            @Html.TextBoxFor(m => m.AttemptTimer, new { @id = "AttemptTimer", @class = "form-control" })

                        </div>

                        <div style='display:none;' id='Game3'>

                            <div class="form-group">
                                <label for="password">Third GameScore</label>
                                @Html.TextBoxFor(m => m.ThirdGameScore, new { @id = "ThirdGameScore", @class = "form-control" })

                            </div>

                            <div class="form-group">
                                <label for="password">Special Point</label>
                                @Html.TextBoxFor(m => m.SpecialPoint, new { @id = "SpecialPoint", @class = "form-control" })

                            </div>

                            <div class="form-group">
                                <label for="password">SuperpowerCoin Game3</label>
                                @Html.TextBoxFor(m => m.SuperpowerCoinGame3, new { @id = "SuperpowerCoinGame3", @class = "form-control" })

                            </div>
                        </div>
                        <div class="form-group">
                            <label for="checkout-payment-name">Status</label>
                            @Html.DropDownListFor(m => m.IsActive, new List<SelectListItem>
                                   {
                                   new SelectListItem{ Text="Active", Value = "A" },
                                   new SelectListItem{ Text="Deactive", Value = "D" }}, new { @class = "form-control", @style = "width:100%;", @id = "IsActive" })
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btn" class="btn btn-effect-ripple btn-sm btn-success">Save</button>
                <button type="button" onclick="Close();" class="btn btn-effect-ripple btn-sm btn-danger">Cancel</button>
            </div>
        </form>
    </div>
</div>
<script src="~/js/Jquery3.5.1.js"></script>

<script>
    $(document).ready(function () {
        if ($("#ChallengeSmallImgUrl").val() != "") {
            $('#ChallengeSmallImgUrl_img').attr('src', $("#ChallengeSmallImgUrl").val());
        }
        if ($("#ChallengeBigImgUrl").val() != "") {
            $('#ChallengeBigImgUrl_img').attr('src', $("#ChallengeBigImgUrl").val());
        }
        if ($("#ChallengePieceMapImgUrl").val() != "") {
            $('#ChallengePieceMapImgUrl_img').attr('src', $("#ChallengePieceMapImgUrl").val());
        }

        $('#btn').on('click', function () {
            debugger;
            var valid = $("#form").valid();
            if (valid == true) {
                AddEdit();
            }
        });

        $("#Acclimateform").validate({
