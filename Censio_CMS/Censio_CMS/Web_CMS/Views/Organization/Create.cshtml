@model Censio_CMS.Models.OrganizationModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="block full">
    <div class="block-title">
        <button type="button" onclick="location.href='@Url.Action("Index", "Organization")'" class="btn btn-primary" style="float: right; margin: 0; margin-right: 10px; margin-top: 9px; padding: 1px 13px;" data-dismiss="modal" aria-hidden="true">Back</button>
        <h2><strong>@ViewBag.modelTitle Organization</strong> </h2>
    </div>
    <div class="table-responsive">

        <form id="Organizationform" class="push">

            <div class="modal-body">
                <div id="myAlert">
                </div>
                <div class="loader "> <img src="~/img/Loader.gif" style="height:50px;width:50px" /></div>
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">

                        
                        <div class="form-group">
                            <label for="Industry_Name">Organization Name</label>
                            @Html.TextBoxFor(m => m.IdOrganization, new { @id = "IdOrganization", @style = "display: none;" })
                            @Html.TextBoxFor(m => m.OrganizationName, new { @id = "OrganizationName", @class = "form-control" })

                        </div>



                        <div class="form-group">
                            <label for="password">Description</label>
                            @Html.TextAreaFor(m => m.Description, new { @id = "Description", @class = "form-control" })

                        </div>


                        <div class="form-group">
                            <div class="col-sm-6">
                                <label for="checkout-payment-name">Logo Organization</label>
                                @Html.TextBoxFor(m => m.Logo, new { @id = "Logo", @style = "display: none;" })
                                <input type="file" title="search image" class="form-control" id="file" name="file" onchange="show(this)" />
                            </div>
                            <div class="col-sm-6">
                                <img id="user_img" style="height:100px;width:100px;" class="form-control" Style="border:solid" />
                            </div>
                        </div>



                        <div class="form-group">
                            <label for="password">Name</label>
                            @Html.TextBoxFor(m => m.Name, new { @id = "Name", @class = "form-control" })

                        </div>


                        <div class="form-group">
                            <label for="password">PhoneNo</label>
                            @Html.TextBoxFor(m => m.PhoneNo, new { @id = "PhoneNo", @class = "form-control" })

                        </div>


                        <div class="form-group">
                            <label for="password">Contact Email</label>
                            @Html.TextBoxFor(m => m.ContactEmail, new { @id = "ContactEmail", @class = "form-control" })

                        </div>

                        <div class="form-group">
                            <label for="password">Default Email</label>
                            @Html.TextBoxFor(m => m.DefaultEmail, new { @id = "DefaultEmail", @class = "form-control" })

                        </div>


                        <div class="form-group ">
                            <label for="password">Status</label>
                            @Html.DropDownListFor(m => m.Status, new List<SelectListItem>
                                   {
                                   new SelectListItem{ Text="Active", Value = "A" },
                                   new SelectListItem{ Text="Deactive", Value = "D" }}, new { @class = "form-control show-tick", @style = "width:100%;", @id = "Status" })

                        </div>

                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" id="btn" class="btn btn-effect-ripple btn-sm btn-success">Save</button>
                    <button type="button" onclick="Close();" class="btn btn-effect-ripple btn-sm btn-danger">Cancel</button>
                </div>
        </form>
    </div>
</div>
<script src="~/js/Jquery3.5.1.js"></script>
<script>
    $(document).ready(function () {
        if ($("#Logo").val() != "") {
            $('#user_img').attr('src', $("#Logo").val());
        }
        $('#btn').on('click', function () {
            debugger;
            var valid = $("#Organizationform").valid();
            if (valid == true) {
                AddEdit();
            }
        });

        $("#Organizationform").validate({
            rules: {

              
                OrganizationName: "required",
                Description: "required",
                Name: "required",
                PhoneNo: "required",
                ContactEmail: "required",
                DefaultEmail: "required",
                Status: "required",
               
            },
            messages: {

               
                OrganizationName: "please Enter Organization Name",
                Description: "Please Enter a Description",
                Name: "Please Enter Name",
                PhoneNo: "Please Enter Your PhoneNo ",
                ContactEmail: "Please Enter your Emailid",
                DefaultEmail: "Please Enter Email",
                Status: "Please Select a Status",
                
            }
        })
    });



</script>
<style type="text/css">
    .loader {
        display: none;
        position: absolute;
        top: 75%;
        left: 50%;
        margin: -75px 0px 0px -50px;
    }
</style>

<script src="~/AppJavascript/Organization.js"></script>